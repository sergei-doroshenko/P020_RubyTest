{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for rdebug-ide",
            "cwd": "${workspaceRoot}",
            "type": "Ruby",
            "request": "attach",
            "remoteHost": "127.0.0.1",
            "remotePort": "1234",
            "remoteWorkspaceRoot": "${workspaceRoot}"
        },
        {
            "name": "Debug Opened File",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${file}",
            "env": {
              "PATH": "/usr/local/lib/ruby/gems/3.0.0/bin:/usr/local/Cellar/ruby/3.0.0_1/lib/ruby/gems/3.0.0/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin",
              "GEM_HOME": "/usr/local/lib/ruby/gems/3.0.0",
              "GEM_PATH": "/usr/local/lib/ruby/gems/3.0.0:/usr/local/Cellar/ruby/3.0.0_1/lib/ruby/gems/3.0.0",
              "RUBY_VERSION": "3.0.0"
            },
            "stopOnEntry": false,
            "showDebuggerOutput": true
        },
        {
            "name": "Debug Defined Local File",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/src/main.rb",
            "env": {
              "PATH": "/usr/local/lib/ruby/gems/3.0.0/bin:/usr/local/Cellar/ruby/3.0.0_1/lib/ruby/gems/3.0.0/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/Users/et/.rvm/bin:/Users/et/.rvm/bin",
              "GEM_HOME": "/usr/local/lib/ruby/gems/3.0.0",
              "GEM_PATH": "/usr/local/lib/ruby/gems/3.0.0:/usr/local/Cellar/ruby/3.0.0_1/lib/ruby/gems/3.0.0",
              "RUBY_VERSION": "3.0.0"
            }
          }
    ]
}